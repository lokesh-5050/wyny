    <div class="container check-out-items-wrap position-relative" style="z-index: 9999;top: 8vmax;">
        <h1>Foods In Your Bag</h1>


         <% user.cart.forEach(item => {%>
              
            <div class="row-food">
                <div class="show-food-img">
                    <img id="fimg" src="<%= item.foods.fimg %> " alt="foodImg">
                </div>
                <div class="show-food-name">
                    <h4><%= item.foods.foodname %> </h4>
                    <div class="show-food-desc">
                        <h5><%= item.foods.descriptionoffood %> </h5>
                    </div>
                    <div class="increase-decrease-items">
                        <a href="/incItem/<%= item._id %>">+</a> &nbsp; <a href="/decItem/<%= item._id %>">-</a>
                    </div>
                </div>
                <div class="show-food-price">
                    <h5><%= item.foods.price %> </h5>
                </div>
                <div id="food-Quan">
                    <h5>X <%= item.quan %> </h5>
                </div>
                <div id="tot-price" class="show-food-price">
                    <h5>$totoo</h5>
                </div>
            </div>
            <%}); %>  



       

      
        
        
    </div>  
    <div id="check-out" class="container">
            <div class="container xtra-charges">
                <h6>Gst - ${}</h6>
                <h6>Tax - ${}</h6>
                
            </div>
            
                     
              <h5>Total Amount - <%= tot %>    </h5>
            <button type="button" class="btn-check btn btn-primary btn-lg">Large button</button>
    </div>
