    #tot-price{
        position: absolute;
        right: 2%;

    }
    #check-out{
        width: 90%;
        min-height: 10vmax;
        border: 2px solid rgb(255, 0, 85);
        position: absolute;
        bottom: 5%;
        /* background-color: red; */
    }
    
    #tot_amnt{
        position: relative;
        left:64vmax;
    }
    .xtra-charges{
        max-width: 12vmax;
        min-height: 3vh;
        /* background-color: skyblue; */
        position: relative;
        left: 36vmax;
    }
    #check-out h5{
        position: relative;
        left: 70vmax;
        max-width: 17vmax;
        /* background-color: palevioletred; */
    }
    .btn-check{
        position: relative;
        left: 75vmax;
    }
    
  </style>
