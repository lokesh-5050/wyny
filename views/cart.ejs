    .increase-decrease-items{
        border: 2px solid #000;
    }
    .increase-decrease-items a{
        font-size: 50px;
        margin-left: 1vmax;
        color: #000;
    }
    .show-food-price{
        position: absolute;

        right:  25vmax;
        top: 2px;
    }

    #food-Quan{
        position: absolute;
        min-width: 2vmax;
        min-height: 2vmax;
        border: 1px solid slateblue;
        right:  15vmax;
